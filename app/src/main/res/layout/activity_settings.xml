<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="uk.co.walesbirds.birdwatching.SettingsActivity">

    <Switch
        android:id="@+id/swLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="English"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnUpdatePictures"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:text="Update Pictures"
        app:layout_constraintTop_toBottomOf="@+id/swLanguage"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Download any pictures you don't have."
        app:layout_constraintTop_toBottomOf="@+id/btnUpdatePictures"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnReloadPictures"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginTop="11dp"
        android:text="Reload Pictures"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Delete and reload all pictures"
        app:layout_constraintTop_toBottomOf="@+id/btnReloadPictures"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="19dp"
        android:text="This will delete all pictures"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDeletePictures"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnDeletePictures"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="17dp"
        android:text="Delete Pictures"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txtCredits"
        android:layout_width="385dp"
        android:layout_height="76dp"
        android:layout_marginBottom="0dp"
        android:background="#a2ffffff"
        android:padding="5dp"
        android:text="Diolch am ddefnyddio'r rhestr i\n'Cymdeithas Edward Llywd' a 'Llen Natur'\nApp designed and created by AGL Solutions\ninfo@aglsolutions.co.uk"
        android:textAlignment="center"
        android:textColor="#313131"
        app:layout_constraintBottom_toBottomOf="parent"


        android:layout_marginRight="-1dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.888" />
</android.support.constraint.ConstraintLayout>
